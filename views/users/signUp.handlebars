<h1>{{title}}</h1>
<br />
<form method="POST" id="signup-form" action="/signup">
<label>First Name:
    <input
      type="text"
      name="signup-firstName"
      id="signup-firstName"
      placeholder="Enter firstName"
      value="{{userInfo.firstName}}"
        required
    />
</label>
    <br/>
    <label>Last Name:
    <input
      type="text"
      name="signup-lastName"
      id="signup-lastName"
      placeholder="Enter lastName"
      value="{{userInfo.lastName}}"
        required
    />
    </label><br/>
  <label>User Name:
    <input
      type="email"
      name="signup-username"
      id="signup-username"
      placeholder="Enter username"
      value="{{userInfo.username}}"
        required
      pattern="^[a-z0-9._%+-]+@[a-z0-9.-]+\.edu$"
      title="Please enter an edu mail"
    />
  </label><br /><br />
  <label>Password:
    <input
      type="password"
      name="signup-password"
      id="signup-password"
      placeholder="Enter password"
      value="{{userInfo.password}}"
        required
      pattern= "^[a-zA-Z0-9@.!_].{5,20}$"
        title="Please include one uppercase, one  lowercase, one special character, one number and min length of 5 and max length of 20"
    />
  </label><br />

  <label>Gender:
   <input type="radio" name="gender" value="male" id="male">
            <label for="male">Male</label>
            <input type="radio" name="gender" value="female" id="female">
            <label for="female">Female</label>
            <input type="radio" name="gender" value="other" id="other">
            <label for="female">Other</label>
  </label><br />

 
  <label>Birthday:
    <input type="date" id="birthday" name="birthday">
    
  </label><br />

  <label>Phone:</label>
    <input type="number" id="phone" name="phone" >
  </label><br />

 <label>Hobbies: 
   <textarea id="Hobbies" name="Hobbies" rows="4" cols="30">
  </textarea> <br /> 
  </label>

  <label>Location: 
   <textarea id="Location" name="Location" rows="1" cols="30">
  </textarea> 
   </label>



  <br /><br />
  <button type="submit">Submit</button>
</form>
<br />
<div id="server-error" class="error"></div>
<div id="login-error" class="error"></div>
<a href="/users/login">Already have an account? Click here to log-in</a>
